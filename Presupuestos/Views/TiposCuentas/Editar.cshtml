@model TipoCuenta

@{
    ViewData["Title"] = "Editar Tipo de Cuenta";
}

<h1> Editar Tipo Cuenta: @Model.Nombre</h1>

<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert">
</div>

<form asp-controller="TiposCuentas" asp-action="Editar">
     
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label" asp-for="Nombre"></label>
        <input class="form-control" asp-for="Nombre" type="text" placeholder="Ejemplo: Tarjeta credito"></input>
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>


    <button class="btn btn-primary">Enviar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}